    section#branchSection
        h2 Our Branches
        div#branch
            img(src="/static/location/branch1a.jpg", alt="kolkata", class="brImages")        
            img(src="/static/location/branch2a.jpg", alt="mumbai", class="brImages")        
            img(src="/static/location/branch3a.jpg", alt="delhi", class="brImages")        
            img(src="/static/location/branch4a.jpg", alt="bengaluru", class="brImages")        
